<body>
    <div class="container">
        <h1>üöó MacTrack</h1>
        
        <div class="form-group">
            <label for="vin">Vehicle VIN (17 characters)</label>
            <input type="text" id="vin" placeholder="e.g., 1HGBH41JXMN109186" maxlength="17">
        </div>
        
        <div class="form-group">
            <label for="mileage">Current Mileage</label>
            <input type="number" id="mileage" placeholder="e.g., 45000" min="0">
        </div>
        
        <button onclick="lookupVehicle()">Look Up Vehicle</button>
        
        <div id="loading" class="loading" style="display: none;">Loading...</div>
        <div id="error" class="error" style="display: none;"></div>
        <div id="schedule" class="schedule" style="display: none;">
            <div class="vehicle-info" id="vehicleInfo"></div>
            <div id="scheduleItems"></div>
        </div>
    </div>

    <script>
        async function lookupVehicle() {
            const vin = document.getElementById('vin').value.trim().toUpperCase();
            const mileage = parseInt(document.getElementById('mileage').value);
            
            if (vin.length !== 17) {
                showError('VIN must be 17 characters');
                return;
            }
            
            if (isNaN(mileage) || mileage < 0) {
                showError('Please enter a valid mileage');
                return;
            }
            
            document.getElementById('loading').style.display = 'block';
            document.getElementById('error').style.display = 'none';
            document.getElementById('schedule').style.display = 'none';
            
            try {
                const response = await fetch('/api/maintenance', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ vin, mileage })
                });
                
                const data = await response.json();
                
                if (!response.ok) {
                    showError(data.error || 'Failed to lookup vehicle');
                    return;
                }
                
                displaySchedule(data);
            } catch (err) {
                showError('Error: ' + err.message);
            } finally {
                document.getElementById('loading').style.display = 'none';
            }
        }
        
        function displaySchedule(data) {
            document.getElementById('vehicleInfo').innerHTML = `
                <strong>${data.vehicle.year} ${data.vehicle.make} ${data.vehicle.model}</strong><br>
                VIN: ${data.vehicle.vin}<br>
                Current Mileage: ${data.mileage.toLocaleString()} miles
            `;
            
            const itemsHtml = data.schedule.map(item => {
                let className = 'schedule-item';
                if (data.mileage > item.mileage) className += ' overdue';
                else if (data.mileage > item.mileage * 0.8) className += ' due-soon';
                else className += ' up-to-date';
                
                return `
                    <div class="${className}">
                        <strong>${item.service}</strong><br>
                        Due at: ${item.mileage.toLocaleString()} miles
                        ${data.mileage > item.mileage ? '<br><span style="color: #e74c3c;">‚ö†Ô∏è OVERDUE</span>' : ''}
                    </div>
                `;
            }).join('');
            
            document.getElementById('scheduleItems').innerHTML = itemsHtml;
            document.getElementById('schedule').style.display = 'block';
        }
        
        function showError(message) {
            document.getElementById('error').style.display = 'block';
            document.getElementById('error').textContent = message;
        }
    </script>
</body>
